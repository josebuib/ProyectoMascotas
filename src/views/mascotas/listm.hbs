<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Lista de Mascotas</h3>

        {{#if mascotas}}

            <table class="table text-center">
 
                <thead>
                    <tr class="table-dark">
                        <th scope="col" class="col-4"> Nombre    </th>
                        <th scope="col"> Genero  </th>
                        <th scope="col"> Edad      </th>
                        <th scope="col"> Observacion      </th>
                        <th scope="col"> Acciones  </th>
                    </tr>
                </thead>

                <tbody>
                    {{#each mascotas}}
                    
                        <tr>

                            <td> {{name}} </td>
                            <td> {{genero}} </td>
                            <td> {{age}} </td>
                            <td> {{observacion}} </td>
                            <td>
                                <div class="btn-group">
                                    <a href="/edit/{{id}}" class="btn btn-warning p-2">
                                        <i class="fa-solid fa-pencil"></i>
                                    </a>
                                    <a href="/delete/{{id}}" class="btn btn-warning p-2">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </div>
                            </td>

                        </tr>

                    {{/each}}

                </tbody>

            </table>

        {{else}}

        <div class="card text-center mx-auto">
            <div class="card-header">
                <h3>Debes crear una mascota</h3>                
            </div>
            <div class="card-body">
                <p>Presiona este boton para que puedas registrar a una mascota en la aplicacion</p>
                <a href="/add" class="btn btn-primary"> Ir a crear</a>
            </div>
        </div>

        {{/if}}

    </div>
</div>